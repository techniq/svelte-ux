{
  "name": "svelte-ux",
  "description": "A large collection of Svelte components, actions, stores and utils to simplify creating highly interactive and visual applications.  Built using Tailwind with extensibility and customization in mind.",
  "author": "Sean Lynch <techniq35@gmail.com>",
  "license": "MIT",
  "repository": "techniq/svelte-ux",
  "version": "0.75.1",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "package": "svelte-package",
    "prepublishOnly": "svelte-package",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "TZ=UTC+4 vitest",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "prepare": "svelte-kit sync"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@skeletonlabs/tw-plugin": "^0.4.0",
    "@sveltejs/adapter-cloudflare": "^4.7.2",
    "@sveltejs/kit": "^2.6.3",
    "@sveltejs/package": "^2.3.5",
    "@sveltejs/vite-plugin-svelte": "4.0.0-next.4",
    "@tailwindcss/typography": "^0.5.15",
    "@types/culori": "^2.1.1",
    "@types/d3-array": "^3.2.1",
    "@types/d3-scale": "^4.0.8",
    "@types/lodash-es": "^4.17.12",
    "@types/prismjs": "^1.26.4",
    "@vitest/coverage-v8": "^2.1.2",
    "autoprefixer": "^10.4.20",
    "daisyui": "^4.12.12",
    "marked": "^14.1.2",
    "mdsvex": "^0.12.3",
    "posthog-js": "^1.167.0",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.7",
    "rehype-slug": "^6.0.0",
    "svelte": "5.0.0-next.183",
    "svelte-check": "^4.0.4",
    "svelte2tsx": "^0.7.21",
    "tailwindcss": "^3.4.13",
    "tslib": "^2.7.0",
    "typescript": "^5.6.2",
    "unist-util-visit": "^5.0.0",
    "vite": "^5.4.8",
    "vitest": "^2.1.2"
  },
  "type": "module",
  "dependencies": {
    "@floating-ui/dom": "^1.6.11",
    "@fortawesome/fontawesome-common-types": "^6.6.0",
    "@mdi/js": "^7.4.47",
    "clsx": "^2.1.1",
    "culori": "^4.0.1",
    "d3-array": "^3.2.4",
    "d3-scale": "^4.0.2",
    "date-fns": "^4.1.0",
    "immer": "^10.1.1",
    "lodash-es": "^4.17.21",
    "prism-svelte": "^0.5.0",
    "prism-themes": "^1.9.0",
    "prismjs": "^1.29.0",
    "sveld": "^0.20.2",
    "tailwind-merge": "^2.5.3",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "svelte": "^3.56.0 || ^4.0.0 || ^5.0.0-next.120"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./utils/*": {
      "types": "./dist/utils/*.d.ts",
      "svelte": "./dist/utils/*.js"
    },
    "./plugins/*": "./dist/plugins/*",
    "./styles/*": "./dist/styles/*"
  },
  "files": [
    "dist"
  ],
  "svelte": "./dist/index.js"
}
