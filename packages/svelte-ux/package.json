{
  "name": "svelte-ux",
  "description": "A large collection of Svelte components, actions, stores and utils to simplify creating highly interactive and visual applications.  Built using Tailwind with extensibility and customization in mind.",
  "author": "Sean Lynch <techniq35@gmail.com>",
  "license": "MIT",
  "repository": "techniq/svelte-ux",
  "version": "2.0.0-next.10",
  "scripts": {
    "dev": "vite dev --port 3001",
    "build": "vite build",
    "preview": "vite preview",
    "package": "svelte-package",
    "prepublishOnly": "svelte-package",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "TZ=UTC+4 vitest",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "prepare": "svelte-kit sync"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@fortawesome/fontawesome-common-types": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@sveltejs/adapter-cloudflare": "^7.0.4",
    "@sveltejs/kit": "^2.21.5",
    "@sveltejs/package": "^2.3.11",
    "@sveltejs/vite-plugin-svelte": "5.1.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.10",
    "@types/culori": "^4.0.0",
    "@types/d3-array": "^3.2.1",
    "@types/d3-scale": "^4.0.9",
    "@types/lodash-es": "^4.17.12",
    "@types/prismjs": "^1.26.5",
    "@vitest/coverage-v8": "^3.2.3",
    "culori": "^4.0.1",
    "marked": "^15.0.7",
    "mdsvex": "^0.12.3",
    "posthog-js": "^1.252.0",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.4.0",
    "rehype-slug": "^6.0.0",
    "svelte": "5.34.1",
    "svelte-check": "^4.2.1",
    "svelte2tsx": "^0.7.39",
    "tailwindcss": "^4.1.10",
    "tslib": "^2.8.1",
    "typescript": "^5.8.2",
    "unist-util-visit": "^5.0.0",
    "vite": "^6.2.1",
    "vitest": "^3.2.3"
  },
  "type": "module",
  "dependencies": {
    "@floating-ui/dom": "^1.7.1",
    "@layerstack/svelte-actions": "1.0.1-next.12",
    "@layerstack/svelte-stores": "1.0.2-next.12",
    "@layerstack/svelte-table": "1.0.1-next.12",
    "@layerstack/tailwind": "2.0.0-next.14",
    "@layerstack/utils": "2.0.0-next.12",
    "@mdi/js": "^7.4.47",
    "d3-array": "^3.2.4",
    "d3-scale": "^4.0.2",
    "esm-env": "^1.2.2",
    "immer": "^10.1.1",
    "lodash-es": "^4.17.21",
    "prism-svelte": "^0.5.0",
    "prism-themes": "^1.9.0",
    "prismjs": "^1.30.0",
    "sveld": "^0.22.1",
    "zod": "^3.25.64"
  },
  "peerDependencies": {
    "svelte": "^3.56.0 || ^4.0.0 || ^5.0.0"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./utils/*": {
      "types": "./dist/utils/*.d.ts",
      "svelte": "./dist/utils/*.js"
    },
    "./plugins/*": "./dist/plugins/*"
  },
  "files": [
    "dist"
  ],
  "svelte": "./dist/index.js"
}
