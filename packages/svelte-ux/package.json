{
  "name": "svelte-ux",
  "description": "A large collection of Svelte components, actions, stores and utils to simplify creating highly interactive and visual applications.  Built using Tailwind with extensibility and customization in mind.",
  "author": "Sean Lynch <techniq35@gmail.com>",
  "license": "MIT",
  "repository": "techniq/svelte-ux",
  "version": "0.58.0-next.13",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "package": "svelte-package",
    "prepublishOnly": "svelte-package",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "TZ=UTC+4 vitest --coverage",
    "lint": "prettier --ignore-path ../../.gitignore --check .",
    "format": "prettier --ignore-path ../../.gitignore --write .",
    "prepare": "svelte-kit sync"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@skeletonlabs/tw-plugin": "^0.3.1",
    "@sveltejs/adapter-auto": "^3.1.0",
    "@sveltejs/kit": "^2.3.2",
    "@sveltejs/package": "^2.2.5",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@tailwindcss/typography": "^0.5.10",
    "@types/culori": "^2.0.4",
    "@types/d3-array": "^3.2.1",
    "@types/d3-scale": "^4.0.8",
    "@types/lodash-es": "^4.17.12",
    "@types/marked": "^6.0.0",
    "@types/prismjs": "^1.26.3",
    "@vitest/coverage-v8": "^0.34.6",
    "autoprefixer": "^10.4.16",
    "daisyui": "^4.6.0",
    "execa": "^8.0.1",
    "marked": "^11.1.1",
    "mdsvex": "^0.11.0",
    "posthog-js": "^1.100.0",
    "prettier": "^3.2.2",
    "prettier-plugin-svelte": "^3.1.2",
    "rehype-slug": "^6.0.0",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.3",
    "svelte-preprocess": "^5.1.3",
    "svelte2tsx": "^0.7.0",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "unist-util-visit": "^5.0.0",
    "vite": "^5.0.11",
    "vitest": "^0.33.0"
  },
  "type": "module",
  "dependencies": {
    "@floating-ui/dom": "^1.5.4",
    "@fortawesome/fontawesome-common-types": "^6.5.1",
    "@mdi/js": "^7.4.47",
    "clsx": "^2.1.0",
    "culori": "^3.3.0",
    "d3-array": "^3.2.4",
    "d3-scale": "^4.0.2",
    "date-fns": "^3.2.0",
    "immer": "^10.0.3",
    "lodash-es": "^4.17.21",
    "prism-svelte": "^0.5.0",
    "prism-themes": "^1.9.0",
    "prismjs": "^1.29.0",
    "sveld": "^0.19.1",
    "tailwind-merge": "^2.2.0",
    "zod": "^3.22.4"
  },
  "peerDependencies": {
    "svelte": "^3.56.0 || ^4.0.0"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./utils/*": {
      "types": "./dist/utils/*.d.ts",
      "svelte": "./dist/utils/*.js"
    },
    "./plugins/*": "./dist/plugins/*",
    "./styles/*": "./dist/styles/*"
  },
  "files": [
    "dist"
  ],
  "svelte": "./dist/index.js"
}
